        <TextBox x:Name="count1" HorizontalAlignment="Left" Height="25" Margin="403.082,37,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.935,0.436" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="Addition1" HorizontalAlignment="Left" Margin="35.333,36,0,0" VerticalAlignment="Top" Width="25" Height="26" Grid.Column="2" Click="Addition1_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/add_basket.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Remove1"        HorizontalAlignment="Left" Margin="368.082,36,0,0" VerticalAlignment="Top" Width="25" Height="26" RenderTransformOrigin="0.432,1.423" Grid.Column="1" Click="Remove1_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/remove_basket.png"/>
