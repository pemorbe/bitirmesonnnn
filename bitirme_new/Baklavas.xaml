        <Button x:Name="Addition2" HorizontalAlignment="Left" Margin="35.333,111,0,0" VerticalAlignment="Top" Width="25" Height="26" Grid.Column="2" Click="Addition2_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/add_basket.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Remove2"     HorizontalAlignment="Left" Margin="368.082,111,0,0" VerticalAlignment="Top" Width="25" Height="26" RenderTransformOrigin="0.432,1.423" Grid.Column="1" Click="Remove2_Click">
            <Button.Background>
                <ImageBrush ImageSource="Image/remove_basket.png"/>
            </Button.Background>
        </Button>
        <Label Content="Price : " HorizontalAlignment="Left" Height="32" Margin="196.082,184,0,0" VerticalAlignment="Top" Width="58" FontSize="14" FontWeight="Bold" Grid.Column="1"/>
        <Label x:Name="price3" Content="19.00" HorizontalAlignment="Left" Height="32" Margin="243.082,186,0,0" VerticalAlignment="Top" Width="58" FontStyle="Italic" Grid.Column="1"/>
